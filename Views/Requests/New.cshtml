@{
    ViewData["Title"] = "Nový požadavek";
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-plus-circle"></i> Nový požadavek
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Requests">Požadavky</a></li>
                    <li class="breadcrumb-item active">Nový</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <!-- Simple Form -->
                <form id="newRequestForm">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Vytvořit požadavek</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Název požadavku <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg" id="title" name="title" 
                                       placeholder="např. Produktové fotky pro kolekci Jaro 2024" 
                                       autofocus required>
                                <small class="form-text text-muted">Zadejte krátký a výstižný název požadavku</small>
                            </div>
                            
                            <div class="form-group">
                                <label>Zákazník</label>
                                <div class="input-group">
                                    <select class="form-control" id="customerId" name="customerId">
                                        <option value="">-- Vyberte zákazníka --</option>
                                    </select>
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-primary" id="newCustomerBtn" data-toggle="modal" data-target="#newCustomerModal">
                                            <i class="fas fa-plus"></i> Nový
                                        </button>
                                    </div>
                                </div>
                                <small class="form-text text-muted">
                                    Můžete vybrat existujícího zákazníka nebo přidat později
                                </small>
                            </div>
                            
                            <!-- Hidden fields with default values -->
                            <input type="hidden" id="requestType" name="requestType" value="Analysis">
                            <input type="hidden" id="priority" name="priority" value="2">
                            <input type="hidden" id="description" name="description" value=" ">
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                                <i class="fas fa-check"></i> Vytvořit požadavek
                            </button>
                            <p class="text-center mt-3 text-muted">
                                <small>Všechny další informace můžete doplnit později</small>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- New Customer Modal -->
<div class="modal fade" id="newCustomerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nový zákazník</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="newCustomerForm">
                    <div class="form-group">
                        <label>Název zákazníka <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="customerName" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="customerEmail">
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        <input type="tel" class="form-control" id="customerPhone">
                    </div>
                    <div class="form-group">
                        <label>Název společnosti</label>
                        <input type="text" class="form-control" id="customerCompany">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-primary" id="saveCustomerBtn">
                    <i class="fas fa-save"></i> Uložit
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load customers
            loadCustomers();
            
            // Focus on title input
            $('#title').focus();
            
            // Form submission
            $('#newRequestForm').submit(function(e) {
                e.preventDefault();
                
                const title = $('#title').val().trim();
                if (!title) {
                    $('#title').addClass('is-invalid');
                    return;
                }
                
                $('#title').removeClass('is-invalid');
                createRequest();
            });
            
            // Remove invalid class on input
            $('#title').on('input', function() {
                $(this).removeClass('is-invalid');
            });
            
            // Save new customer
            $('#saveCustomerBtn').click(function() {
                const customerData = {
                    name: $('#customerName').val(),
                    email: $('#customerEmail').val() || null,
                    phone: $('#customerPhone').val() || null,
                    companyName: $('#customerCompany').val() || null
                };
                
                if (!customerData.name) {
                    Swal.fire('Chyba', 'Název zákazníka je povinný', 'error');
                    return;
                }
                
                $.ajax({
                    url: '/Customers/CreateJson',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(customerData),
                    success: function(response) {
                        if (response.success && response.data) {
                            $('#newCustomerModal').modal('hide');
                            $('#newCustomerForm')[0].reset();
                            
                            // Reload customers and select the new one
                            loadCustomers(response.data.id);
                            
                            Swal.fire('Úspěch', 'Zákazník byl vytvořen', 'success');
                        }
                    },
                    error: function() {
                        Swal.fire('Chyba', 'Nepodařilo se vytvořit zákazníka', 'error');
                    }
                });
            });
        });
        
        function loadCustomers(selectedId = null) {
            $.ajax({
                url: '/Customers/GetJson',
                method: 'GET',
                success: function(response) {
                    const select = $('#customerId');
                    select.empty();
                    select.append('<option value="">-- Vyberte zákazníka --</option>');
                    
                    if (response.data && response.data.length > 0) {
                        response.data.forEach(customer => {
                            const selected = (selectedId && customer.id == selectedId) ? 'selected' : '';
                            const companyInfo = customer.companyName ? ` (${customer.companyName})` : '';
                            select.append(`<option value="${customer.id}" ${selected}>${customer.name}${companyInfo}</option>`);
                        });
                    }
                    
                    // Check if there's a pre-selected customer from URL
                    const urlParams = new URLSearchParams(window.location.search);
                    const customerIdFromUrl = urlParams.get('customerId');
                    if (customerIdFromUrl && !selectedId) {
                        $('#customerId').val(customerIdFromUrl);
                    }
                }
            });
        }
        
        function createRequest() {
            const selectedCustomer = $('#customerId option:selected');
            const customerId = $('#customerId').val();
            
            const formData = {
                requestType: $('#requestType').val(),
                title: $('#title').val(),
                description: $('#description').val(),
                priority: parseInt($('#priority').val()),
                status: 0, // Draft status
                clientId: customerId || null,
                clientName: customerId ? selectedCustomer.text().split(' (')[0] : null
            };
            
            // Disable submit button
            const submitBtn = $('#newRequestForm button[type="submit"]');
            submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Vytváření...');
            
            $.ajax({
                url: '/api/requestsapi',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function(response) {
                    if (response.success && response.data) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Požadavek vytvořen!',
                            text: `Požadavek "${response.data.title}" byl úspěšně vytvořen`,
                            showCancelButton: true,
                            confirmButtonText: 'Zobrazit detail',
                            cancelButtonText: 'Vytvořit další'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = `/Requests/${response.data.id}`;
                            } else {
                                // Reset form
                                $('#newRequestForm')[0].reset();
                                $('#title').focus();
                                submitBtn.prop('disabled', false).html('<i class="fas fa-check"></i> Vytvořit požadavek');
                            }
                        });
                    }
                },
                error: function(xhr) {
                    const error = xhr.responseJSON?.message || 'Nepodařilo se vytvořit požadavek';
                    Swal.fire('Chyba', error, 'error');
                    submitBtn.prop('disabled', false).html('<i class="fas fa-check"></i> Vytvořit požadavek');
                }
            });
        }
    </script>
}