        function insertCheckbox() {
            const editor = document.getElementById('quickNote');
            editor.focus();
            
            const selection = window.getSelection();
            const range = selection.getRangeAt(0);
            
            // Ujist√≠me se, ≈æe jsme uvnit≈ô editoru
            if (!editor.contains(range.commonAncestorContainer)) {
                // Pokud ne, p≈ôesuneme kurzor na konec editoru
                range.selectNodeContents(editor);
                range.collapse(false);
            }
            
            // Vytvo≈ô√≠me kontejner pro √∫kol
            const taskItem = document.createElement('div');
            taskItem.className = 'task-item';
            taskItem.style.marginBottom = '5px';
            
            // Vytvo≈ô√≠me checkbox
            const checkbox = document.createElement('input');
            checkbox.type = 'checkbox';
            checkbox.className = 'task-checkbox';
            checkbox.style.marginRight = '8px';
            checkbox.style.cursor = 'pointer';
            
            // Vytvo≈ô√≠me span pro text
            const textSpan = document.createElement('span');
            textSpan.className = 'task-text';
            textSpan.innerHTML = '&nbsp;'; // Pr√°zdn√Ω prostor pro zaƒç√°tek psan√≠
            
            taskItem.appendChild(checkbox);
            taskItem.appendChild(textSpan);
            
            range.insertNode(taskItem);
            
            // Nastav√≠me kurzor do textov√©ho spanu
            const textRange = document.createRange();
            textRange.selectNodeContents(textSpan);
            textRange.collapse(false);
            selection.removeAllRanges();
            selection.addRange(textRange);
            
            $('#quickNote').trigger('input');
        }
        
