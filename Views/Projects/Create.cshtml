@model OAI.Core.DTOs.CreateProjectDto
@{
    ViewData["Title"] = "Vytvo≈ôit projekt";
    var workflowTypes = ViewBag.WorkflowTypes as IEnumerable<OAI.Core.DTOs.WorkflowTypeDto> ?? new List<OAI.Core.DTOs.WorkflowTypeDto>();
    var customers = ViewBag.Customers as IEnumerable<OAI.Core.DTOs.Customers.CustomerListDto> ?? new List<OAI.Core.DTOs.Customers.CustomerListDto>();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-plus-circle text-success"></i> Vytvo≈ôit nov√Ω projekt
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Projekty</a></li>
                    <li class="breadcrumb-item active">Vytvo≈ôit</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Create" method="post" id="createProjectForm">
            <div class="row">
                <!-- Main form -->
                <div class="col-xl-9">
                    <!-- Error messages -->
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                            <h5><i class="icon fas fa-ban"></i> Chyby validace:</h5>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-1">‚Ä¢ @error.ErrorMessage</p>
                            }
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    
                    <!-- Basic Information Card -->
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-project-diagram"></i> Z√°kladn√≠ informace projektu
                            </h3>
                        </div>
                        
                        <div class="card-body">
                            <!-- Project Name -->
                            <div class="form-group">
                                <label asp-for="Name" class="font-weight-bold">N√°zev projektu <span class="text-danger">*</span></label>
                                <div class="input-group input-group-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-folder"></i></span>
                                    </div>
                                    <input asp-for="Name" class="form-control" placeholder="nap≈ô. E-commerce vyhled√°vaƒç" autofocus>
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <!-- Type and Description Row -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="WorkflowType" class="font-weight-bold">Typ workflow <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-cogs"></i></span>
                                            </div>
                                            <select asp-for="WorkflowType" class="form-control custom-select">
                                                <option value="">-- Vyberte typ --</option>
                                                @foreach (var type in workflowTypes)
                                                {
                                                    <option value="@type.Value" data-icon="@type.Icon" data-description="@type.Description">
                                                        @type.Name
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="WorkflowType" class="text-danger small"></span>
                                        <small id="workflowDescription" class="form-text text-muted" style="display: none;"></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- Description -->
                                    <div class="form-group">
                                        <label asp-for="Description" class="font-weight-bold">Popis projektu</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                            </div>
                                            <textarea asp-for="Description" class="form-control" rows="3" 
                                                      placeholder="Struƒçn√Ω popis √∫ƒçelu a c√≠le projektu..."></textarea>
                                        </div>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Customer Card -->
                    <div class="card card-info card-outline mt-4">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-users"></i> Informace o z√°kazn√≠kovi
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label class="font-weight-bold">Vyberte nebo vytvo≈ôte z√°kazn√≠ka</label>
                                <select asp-for="CustomerId" class="form-control select2" id="customerSelect" style="width: 100%;">
                                    <option value="">-- Vyberte mo≈ænost --</option>
                                    <option value="" data-internal="true">üè¢ Intern√≠ projekt (bez z√°kazn√≠ka)</option>
                                    <option value="new">‚ûï Nov√Ω z√°kazn√≠k</option>
                                    <optgroup label="Existuj√≠c√≠ z√°kazn√≠ci">
                                        @foreach (var customer in customers)
                                        {
                                            <option value="@customer.Id" 
                                                    data-name="@customer.Name" 
                                                    data-company="@customer.CompanyName">
                                                @customer.Name
                                                @if (!string.IsNullOrEmpty(customer.CompanyName))
                                                {
                                                    <text> (@customer.CompanyName)</text>
                                                }
                                            </option>
                                        }
                                    </optgroup>
                                </select>
                            </div>
                            
                            <!-- Customer Details Section -->
                            <div id="customerDetails" style="display: none;" class="mt-3">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="form-group mb-0">
                                            <label asp-for="CustomerName" class="font-weight-bold">Jm√©no z√°kazn√≠ka</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input asp-for="CustomerName" class="form-control" placeholder="Jan Nov√°k nebo Firma s.r.o.">
                                            </div>
                                            <span asp-validation-for="CustomerName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                                <input asp-for="CustomerEmail" type="hidden" />
                            </div>
                            
                            <!-- Customer Alert -->
                            <div class="alert alert-info alert-dismissible" id="customerAlert" style="display: none;">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <i class="fas fa-info-circle"></i> <span id="customerAlertText">√ödaje z√°kazn√≠ka byly automaticky vyplnƒõny.</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Sidebar with actions -->
                <div class="col-xl-3">
                    <!-- Actions Card -->
                    <div class="card card-success card-outline">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-check-circle"></i> Akce
                            </h3>
                        </div>
                        <div class="card-body">
                            <button type="submit" class="btn btn-success btn-lg btn-block mb-3">
                                <i class="fas fa-check"></i> Vytvo≈ôit projekt
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-block">
                                <i class="fas fa-arrow-left"></i> Zpƒõt na seznam
                            </a>
                        </div>
                    </div>
                    
                    <!-- Help Card -->
                    <div class="card card-warning card-outline mt-3">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-lightbulb"></i> N√°povƒõda
                            </h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-2"><strong>Typ projektu:</strong></p>
                            <ul class="mb-3 pl-3">
                                <li><small>Vyberte typ workflow podle pot≈ôeb projektu</small></li>
                                <li><small>Ka≈æd√Ω typ m√° p≈ôedp≈ôipraven√© kroky</small></li>
                            </ul>
                            
                            <p class="mb-2"><strong>Z√°kazn√≠k:</strong></p>
                            <ul class="mb-0 pl-3">
                                <li><small>Intern√≠ projekt - pro vlastn√≠ √∫ƒçely</small></li>
                                <li><small>Nov√Ω z√°kazn√≠k - vytvo≈ô√≠ se automaticky</small></li>
                                <li><small>Existuj√≠c√≠ - vyberte ze seznamu</small></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <style>
        .card-outline {
            border-top: 3px solid;
        }
        .card-primary.card-outline {
            border-top-color: #007bff;
        }
        .card-info.card-outline {
            border-top-color: #17a2b8;
        }
        .card-success.card-outline {
            border-top-color: #28a745;
        }
        .card-warning.card-outline {
            border-top-color: #ffc107;
        }
        .select2-container--bootstrap4 .select2-selection--single {
            height: calc(1.5em + .75rem + 2px) !important;
        }
        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}

@section Scripts {
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4',
                placeholder: '-- Vyberte z√°kazn√≠ka --',
                allowClear: true
            });
            
            // Handle customer selection
            $('#customerSelect').on('change', function() {
                const selectedOption = $(this).find('option:selected');
                const selectedValue = $(this).val();
                
                if (selectedOption.data('internal') === true) {
                    // Internal project - hide customer details
                    $('#customerDetails').slideUp();
                    $('#customerAlertText').text('Intern√≠ projekt - bez z√°kazn√≠ka');
                    $('#customerAlert').removeClass('alert-info alert-warning').addClass('alert-info').slideDown();
                    $('#CustomerName').val('Intern√≠ projekt');
                    $('#CustomerEmail').val('');
                    // Clear the CustomerId by setting a hidden field
                    $('input[name="InternalProject"]').remove();
                    $('<input>').attr({
                        type: 'hidden',
                        name: 'InternalProject',
                        value: 'true'
                    }).appendTo('#createProjectForm');
                } else if (selectedValue === 'new') {
                    // New customer - will be created automatically
                    $('#customerDetails').slideDown();
                    $('#CustomerName').val('').prop('readonly', false);
                    $('#CustomerEmail').val('');
                    // Don't send 'new' as CustomerId - it should be null
                    $(this).val(''); // Clear the select to send null CustomerId
                    $('#customerDetails .card').removeClass('bg-light').addClass('bg-warning');
                    $('#customerAlertText').text('Nov√Ω z√°kazn√≠k bude automaticky vytvo≈ôen p≈ôi zalo≈æen√≠ projektu.');
                    $('#customerAlert').removeClass('alert-info alert-warning').addClass('alert-warning').slideDown();
                    $('input[name="InternalProject"]').remove();
                } else if (selectedValue === '') {
                    // Nothing selected
                    $('#customerDetails').slideUp();
                    $('#customerAlert').slideUp();
                    $('input[name="InternalProject"]').remove();
                } else {
                    // Existing customer selected
                    const name = selectedOption.data('name');
                    
                    $('#customerDetails').slideDown();
                    $('#CustomerName').val(name).prop('readonly', true);
                    $('#CustomerEmail').val('');
                    $('#customerDetails .card').removeClass('bg-warning').addClass('bg-light');
                    $('#customerAlertText').text('√ödaje z√°kazn√≠ka byly automaticky vyplnƒõny.');
                    $('#customerAlert').removeClass('alert-info alert-warning').addClass('alert-info').slideDown();
                    $('input[name="InternalProject"]').remove();
                }
            });
            
            // Show workflow type description
            $('#WorkflowType').on('change', function() {
                const selectedOption = $(this).find('option:selected');
                const description = selectedOption.data('description');
                
                if (description && $(this).val()) {
                    $('#workflowDescription').text(description).fadeIn();
                } else {
                    $('#workflowDescription').fadeOut();
                }
            });
            
            // Focus on name field
            $('#Name').focus();
        });
    </script>
}