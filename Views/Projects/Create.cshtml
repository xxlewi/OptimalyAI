@model OAI.Core.DTOs.CreateProjectDto
@{
    ViewData["Title"] = "Vytvořit projekt";
    var workflowTypes = ViewBag.WorkflowTypes as IEnumerable<OAI.Core.DTOs.WorkflowTypeDto> ?? new List<OAI.Core.DTOs.WorkflowTypeDto>();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-plus-circle"></i> Vytvořit projekt
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Projekty</a></li>
                    <li class="breadcrumb-item active">Vytvořit</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-plus-circle"></i> Nový projekt
                        </h3>
                    </div>
                    
                    <form asp-action="Create" method="post" id="createProjectForm">
                        <div class="card-body">
                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    <h5><i class="icon fas fa-ban"></i> Chyby validace:</h5>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <p>@error.ErrorMessage</p>
                                    }
                                </div>
                            }
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name">Název projektu <span class="text-danger">*</span></label>
                                        <input asp-for="Name" class="form-control" placeholder="např. E-commerce vyhledávač">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="WorkflowType">Typ workflow <span class="text-danger">*</span></label>
                                        <select asp-for="WorkflowType" class="form-control">
                                            <option value="">-- Vyberte typ --</option>
                                            @foreach (var type in workflowTypes)
                                            {
                                                <option value="@type.Value">
                                                    @type.Name
                                                </option>
                                            }
                                        </select>
                                        <span asp-validation-for="WorkflowType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Description">Popis projektu</label>
                                <textarea asp-for="Description" class="form-control" rows="3" 
                                          placeholder="Stručný popis účelu workflow..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CustomerName">Zákazník</label>
                                        <input asp-for="CustomerName" class="form-control" placeholder="Název zákazníka">
                                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CustomerEmail">Email zákazníka</label>
                                        <input asp-for="CustomerEmail" type="email" class="form-control" placeholder="email@example.com">
                                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Priority">Priorita</label>
                                        <select asp-for="Priority" class="form-control">
                                            <option value="Normal">Normální</option>
                                            <option value="High">Vysoká</option>
                                            <option value="Low">Nízká</option>
                                            <option value="Critical">Kritická</option>
                                        </select>
                                        <span asp-validation-for="Priority" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="TriggerType">Spouštění</label>
                                        <select asp-for="TriggerType" class="form-control">
                                            <option value="Manual">Manuální</option>
                                            <option value="Schedule">Plánované</option>
                                            <option value="Event">Události</option>
                                        </select>
                                        <span asp-validation-for="TriggerType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group" id="cronGroup" style="display: none;">
                                <label asp-for="CronExpression">Cron výraz</label>
                                <input asp-for="CronExpression" class="form-control" placeholder="0 9 * * *">
                                <small class="form-text text-muted">Příklad: "0 9 * * *" = každý den v 9:00</small>
                                <span asp-validation-for="CronExpression" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label>Co chcete dělat po vytvoření?</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="nextAction" id="actionDesigner" value="designer" checked>
                                    <label class="form-check-label" for="actionDesigner">
                                        <i class="fas fa-pen-fancy"></i> Přejít na workflow designer
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="nextAction" id="actionList" value="list">
                                    <label class="form-check-label" for="actionList">
                                        <i class="fas fa-list"></i> Vrátit se na seznam projektů
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="nextAction" id="actionDetail" value="detail">
                                    <label class="form-check-label" for="actionDetail">
                                        <i class="fas fa-eye"></i> Zobrazit detail projektu
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Zpět na seznam
                                    </a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-plus-circle"></i> Vytvořit projekt
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show/hide cron expression based on trigger type
            $('#TriggerType').on('change', function() {
                if ($(this).val() === 'Schedule') {
                    $('#cronGroup').show();
                } else {
                    $('#cronGroup').hide();
                }
            });
            
            // Handle form submission with next action
            $('#createProjectForm').on('submit', function(e) {
                // Form will submit normally, but we'll handle redirection in controller
                const nextAction = $('input[name="nextAction"]:checked').val();
                $('<input>').attr({
                    type: 'hidden',
                    name: 'NextAction',
                    value: nextAction
                }).appendTo($(this));
            });
        });
    </script>
}