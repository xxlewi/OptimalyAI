                                            <option value="Schedule" selected="@(Model.TriggerType == "Schedule")">‚è∞ Pl√°novan√© spou≈°tƒõn√≠</option>
                                            <option value="Event" selected="@(Model.TriggerType == "Event")">‚ö° Ud√°lostmi ≈ô√≠zen√©</option>
