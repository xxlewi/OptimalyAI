@model IEnumerable<OAI.Core.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Seznam projektů - Produkční verze";
    var summary = ViewBag.Summary as OAI.Core.DTOs.ProjectSummaryDto;
    var workflowTypes = ViewBag.WorkflowTypes as IEnumerable<OAI.Core.Interfaces.WorkflowTypeDto> ?? new List<OAI.Core.Interfaces.WorkflowTypeDto>();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-project-diagram"></i> Projekty
                    <small class="text-muted">Clean Architecture</small>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Projekty</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <!-- Stats Row -->
        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(summary?.TotalProjects ?? 0)</h3>
                        <p>Celkem projektů</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@(summary?.ActiveProjects ?? 0)</h3>
                        <p>Aktivní projekty</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-play"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@(summary?.DraftProjects ?? 0)</h3>
                        <p>Rozpracované</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-edit"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@(summary?.FailedProjects ?? 0)</h3>
                        <p>Selhané</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" id="searchProjects" 
                           placeholder="Vyhledat projekt..." value="@ViewBag.CurrentSearch">
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-control" id="filterStatus">
                    <option value="">Všechny stavy</option>
                    <option value="Active" @(ViewBag.CurrentStatus == "Active" ? "selected" : "")>Aktivní</option>
                    <option value="Draft" @(ViewBag.CurrentStatus == "Draft" ? "selected" : "")>Rozpracované</option>
                    <option value="Completed" @(ViewBag.CurrentStatus == "Completed" ? "selected" : "")>Dokončené</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-control" id="filterWorkflowType">
                    <option value="">Všechny typy workflow</option>
                    @foreach (var type in workflowTypes)
                    {
                        <option value="@type.Value" @(ViewBag.CurrentWorkflowType == type.Value ? "selected" : "")>
                            @type.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-default btn-block" onclick="clearFilters()" title="Vymazat filtry">
                    <i class="fas fa-times"></i> Vymazat
                </button>
            </div>
            <div class="col-md-1">
                <button class="btn btn-primary btn-block" onclick="applyFilters()" title="Aplikovat filtry">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </div>

        <!-- Projects Table -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Seznam projektů</h3>
                <div class="card-tools">
                    <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Nový projekt
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <table class="table table-bordered table-striped table-hover" id="projectsTable">
                        <thead>
                            <tr>
                                <th>Projekt</th>
                                <th>Zákazník</th>
                                <th>Workflow</th>
                                <th>Poslední běh</th>
                                <th>Úspěšnost</th>
                                <th style="width: 200px">Akce</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>
                                                <a href="@Url.Action("Details", new { id = project.Id })" class="text-dark">
                                                    @project.Name
                                                </a>
                                            </strong>
                                            @if (project.Status == "Active")
                                            {
                                                <span class="badge badge-success float-right">Aktivní</span>
                                            }
                                            else if (project.Status == "Draft")
                                            {
                                                <span class="badge badge-warning float-right">Rozpracovaný</span>
                                            }
                                            else if (project.Status == "Completed")
                                            {
                                                <span class="badge badge-info float-right">Dokončený</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                @if (!string.IsNullOrEmpty(project.Description))
                                                {
                                                    @project.Description
                                                }
                                                else
                                                {
                                                    <text>ID: @project.Id.ToString().Substring(0, 8)</text>
                                                }
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <i class="fas fa-user text-muted"></i> 
                                            @project.CustomerName
                                            <br>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope"></i> 
                                                <a href="mailto:@(project.CustomerEmail ?? "email@example.com")" class="text-muted">
                                                    @(project.CustomerEmail ?? "email@example.com")
                                                </a>
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="badge badge-info">
                                                <i class="fas fa-layer-group"></i> @project.StageCount kroků
                                            </span>
                                            <br>
                                            <small>
                                                @switch (project.TriggerType)
                                                {
                                                    case "Manual":
                                                        <span><i class="fas fa-hand-pointer"></i> Manuální</span>
                                                        break;
                                                    case "Schedule":
                                                        <span><i class="fas fa-clock"></i> Plánované</span>
                                                        break;
                                                    case "Event":
                                                        <span><i class="fas fa-bolt"></i> Událostmi</span>
                                                        break;
                                                    default:
                                                        <span class="text-muted">@project.TriggerType</span>
                                                        break;
                                                }
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (project.LastRun.HasValue)
                                        {
                                            <div>
                                                <small>
                                                    @project.LastRun.Value.ToString("dd.MM. HH:mm")
                                                    <br>
                                                    @if (project.LastRunSuccess)
                                                    {
                                                        <span class="badge badge-success">
                                                            <i class="fas fa-check"></i> Úspěch
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">
                                                            <i class="fas fa-times"></i> Selhalo
                                                        </span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Ještě neběželo</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="text-center">
                                            <strong>@project.SuccessRate%</strong>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar @(project.SuccessRate >= 80 ? "bg-success" : project.SuccessRate >= 50 ? "bg-warning" : "bg-danger")" 
                                                     style="width: @project.SuccessRate%"></div>
                                            </div>
                                            <small class="text-muted">@project.TotalRuns běhů</small>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success btn-sm" 
                                                    onclick="executeWorkflow('@project.Id')" title="Spustit workflow">
                                                <i class="fas fa-play"></i>
                                            </button>
                                            <a href="@Url.Action("Index", "WorkflowDesigner", new { projectId = project.Id })" 
                                               class="btn btn-primary btn-sm" title="Upravit workflow">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Details", new { id = project.Id })" 
                                               class="btn btn-info btn-sm" title="Detail projektu">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" 
                                                    onclick="deleteProject('@project.Id')" title="Smazat projekt">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Žádné projekty</h4>
                        <p class="text-muted">Zatím nemáte vytvořené žádné projekty.</p>
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Vytvořit první projekt
                        </a>
                    </div>
                }
            </div>
            @if (ViewBag.TotalPages > 1)
            {
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    page = ViewBag.CurrentPage - 1, 
                                    status = ViewBag.CurrentStatus, 
                                    workflowType = ViewBag.CurrentWorkflowType, 
                                    search = ViewBag.CurrentSearch 
                                })">&laquo;</a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    page = i, 
                                    status = ViewBag.CurrentStatus, 
                                    workflowType = ViewBag.CurrentWorkflowType, 
                                    search = ViewBag.CurrentSearch 
                                })">@i</a>
                            </li>
                        }
                        
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    page = ViewBag.CurrentPage + 1, 
                                    status = ViewBag.CurrentStatus, 
                                    workflowType = ViewBag.CurrentWorkflowType, 
                                    search = ViewBag.CurrentSearch 
                                })">&raquo;</a>
                            </li>
                        }
                    </ul>
                    <div class="float-left">
                        Stránka @ViewBag.CurrentPage z @ViewBag.TotalPages 
                        (@ViewBag.TotalCount projektů celkem)
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function applyFilters() {
            const search = $('#searchProjects').val();
            const status = $('#filterStatus').val();
            const workflowType = $('#filterWorkflowType').val();
            
            const params = new URLSearchParams();
            if (search) params.append('search', search);
            if (status) params.append('status', status);
            if (workflowType) params.append('workflowType', workflowType);
            params.append('page', '1'); // Reset to first page
            
            window.location.href = '@Url.Action("Index")' + '?' + params.toString();
        }
        
        function clearFilters() {
            window.location.href = '@Url.Action("Index")';
        }
        
        function executeWorkflow(projectId) {
            // Přesměruj na WorkflowPrototype controller pro spuštění
            window.location.href = '/WorkflowPrototype/Details?projectId=' + projectId;
        }
        
        function deleteProject(projectId) {
            if (confirm('Opravdu smazat tento projekt? Tato akce je nevratná.')) {
                $.ajax({
                    url: '@Url.Action("DeleteProject", "Projects")'.replace('Projects', 'api') + '/' + projectId,
                    type: 'DELETE',
                    success: function(response) {
                        toastr.success('Projekt byl smazán');
                        location.reload();
                    },
                    error: function(xhr) {
                        const response = xhr.responseJSON || { message: 'Chyba při mazání projektu' };
                        toastr.error(response.message || 'Chyba při mazání projektu');
                    }
                });
            }
        }
        
        // Handle Enter key in search
        $('#searchProjects').on('keypress', function(e) {
            if (e.which === 13) { // Enter key
                applyFilters();
            }
        });
        
        // Auto-apply filters on select change
        $('#filterStatus, #filterWorkflowType').on('change', function() {
            applyFilters();
        });
    </script>
}