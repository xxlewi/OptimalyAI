@model IEnumerable<OptimalyAI.ViewModels.ProjectViewModel>
@{
    ViewData["Title"] = "AI Projekty";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">AI Projekty</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Nový projekt
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var project in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card card-widget widget-user-2">
                                <div class="widget-user-header bg-@(project.Status switch { 
                                    ProjectStatus.Active => "success",
                                    ProjectStatus.Failed => "danger",
                                    ProjectStatus.Paused => "warning",
                                    ProjectStatus.Completed => "info",
                                    _ => "secondary"
                                })">
                                    <h3 class="widget-user-username">@project.Name</h3>
                                    <h5 class="widget-user-desc">@project.Status</h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted">@project.Description</p>
                                    <ul class="nav flex-column">
                                        <li class="nav-item">
                                            <span class="nav-link">
                                                <i class="fas fa-clock"></i> Plánování: <strong>@project.Schedule</strong>
                                            </span>
                                        </li>
                                        <li class="nav-item">
                                            <span class="nav-link">
                                                <i class="fas fa-chart-line"></i> Úspěšnost: <strong>@project.Metrics.SuccessRate.ToString("F1")%</strong>
                                            </span>
                                        </li>
                                        <li class="nav-item">
                                            <span class="nav-link">
                                                <i class="fas fa-tasks"></i> Zpracováno: <strong>@project.Metrics.ItemsProcessed</strong> položek
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-default">
                                            <i class="fas fa-eye"></i> Detail
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-default">
                                            <i class="fas fa-edit"></i> Upravit
                                        </a>
                                        @if (project.Status == ProjectStatus.Active)
                                        {
                                            <a asp-action="Pause" asp-route-id="@project.Id" class="btn btn-warning">
                                                <i class="fas fa-pause"></i> Pozastavit
                                            </a>
                                        }
                                        else if (project.Status == ProjectStatus.Paused)
                                        {
                                            <a asp-action="Resume" asp-route-id="@project.Id" class="btn btn-success">
                                                <i class="fas fa-play"></i> Spustit
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}