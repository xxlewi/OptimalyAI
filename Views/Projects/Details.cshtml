                                        <th>Zah√°jeno</th>
                                        <th>Dokonƒçeno</th>
                                        <th>Doba trv√°n√≠</th>
                                        <th>Zpracov√°no</th>
                                        <th>Status</th>
                                        <th>Spustil</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody id="executionHistoryBody">
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">
                                            <i class="fas fa-spinner fa-spin"></i> Naƒç√≠t√°m historii...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modals -->
