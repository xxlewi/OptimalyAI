@model OAI.Core.DTOs.ProjectDto
@{
    ViewData["Title"] = "Detail projektu";
    var executions = ViewBag.Executions as IEnumerable<OAI.Core.DTOs.ProjectExecutionDto> ?? new List<OAI.Core.DTOs.ProjectExecutionDto>();
    var files = ViewBag.Files as IEnumerable<OAI.Core.DTOs.ProjectFileDto> ?? new List<OAI.Core.DTOs.ProjectFileDto>();
    var workflowTypes = ViewBag.WorkflowTypes as IEnumerable<OAI.Core.DTOs.WorkflowTypeDto> ?? new List<OAI.Core.DTOs.WorkflowTypeDto>();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-project-diagram"></i> @Model.Name
                    @if (Model.Status == "Active")
                    {
                        <span class="badge badge-success">Aktivní</span>
                    }
                    else if (Model.Status == "Draft")
                    {
                        <span class="badge badge-warning">Rozpracovaný</span>
                    }
                    else if (Model.Status == "Completed")
                    {
                        <span class="badge badge-info">Dokončený</span>
                    }
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Projekty</a></li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <!-- Project Actions -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Zpět na seznam
                    </a>
                    <button type="button" class="btn btn-success" onclick="executeWorkflow()">
                        <i class="fas fa-play"></i> Spustit workflow
                    </button>
                    <a href="@Url.Action("Index", "WorkflowDesigner", new { projectId = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Upravit workflow
                    </a>
                    <button type="button" class="btn btn-warning" onclick="validateWorkflow()">
                        <i class="fas fa-check-circle"></i> Validovat workflow
                    </button>
                    <button type="button" class="btn btn-danger" onclick="deleteProject()">
                        <i class="fas fa-trash"></i> Smazat projekt
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Project Information -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle"></i> Informace o projektu
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Název:</strong><br>
                                @Model.Name<br><br>
                                
                                <strong>Popis:</strong><br>
                                @(string.IsNullOrEmpty(Model.Description) ? "Bez popisu" : Model.Description)<br><br>
                                
                                <strong>Zákazník:</strong><br>
                                @if (!string.IsNullOrEmpty(Model.CustomerName))
                                {
                                    <i class="fas fa-user"></i> @Model.CustomerName
                                    @if (!string.IsNullOrEmpty(Model.CustomerEmail))
                                    {
                                        <br><small class="text-muted"><i class="fas fa-envelope"></i> @Model.CustomerEmail</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Interní projekt</span>
                                }
                                <br><br>
                                
                                <strong>Typ workflow:</strong><br>
                                @{
                                    var workflowType = workflowTypes.FirstOrDefault(w => w.Value == Model.WorkflowType);
                                }
                                @if (workflowType != null)
                                {
                                    <i class="@workflowType.Icon"></i> @workflowType.Name
                                }
                                else
                                {
                                    @Model.WorkflowType
                                }
                            </div>
                            <div class="col-md-6">
                                <strong>Priorita:</strong><br>
                                @switch (Model.Priority)
                                {
                                    case "Critical":
                                        <span class="badge badge-danger">Kritická</span>
                                        break;
                                    case "High":
                                        <span class="badge badge-warning">Vysoká</span>
                                        break;
                                    case "Low":
                                        <span class="badge badge-secondary">Nízká</span>
                                        break;
                                    default:
                                        <span class="badge badge-info">Normální</span>
                                        break;
                                }
                                <br><br>
                                
                                <strong>Spouštění:</strong><br>
                                @switch (Model.TriggerType)
                                {
                                    case "Manual":
                                        <i class="fas fa-hand-pointer"></i> Manuální
                                        break;
                                    case "Schedule":
                                        <i class="fas fa-clock"></i> Plánované
                                        @if (!string.IsNullOrEmpty(Model.CronExpression))
                                        {
                                            <br><small class="text-muted">Cron: @Model.CronExpression</small>
                                        }
                                        break;
                                    case "Event":
                                        <i class="fas fa-bolt"></i> Událostmi
                                        break;
                                    default:
                                        @Model.TriggerType
                                        break;
                                }
                                <br><br>
                                
                                <strong>Vytvořen:</strong><br>
                                @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")<br><br>
                                
                                <strong>Aktualizován:</strong><br>
                                @Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Statistics -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-bar"></i> Statistiky
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <h3>@Model.SuccessRate%</h3>
                            <div class="progress mb-3">
                                <div class="progress-bar @(Model.SuccessRate >= 80 ? "bg-success" : Model.SuccessRate >= 50 ? "bg-warning" : "bg-danger")" 
                                     style="width: @Model.SuccessRate%"></div>
                            </div>
                            <p class="text-muted">Úspěšnost</p>
                        </div>
                        
                        <hr>
                        
                        <div class="row text-center">
                            <div class="col-6">
                                <h4>@Model.TotalRuns</h4>
                                <p class="text-muted">Celkem běhů</p>
                            </div>
                            <div class="col-6">
                                <h4>@Model.StageCount</h4>
                                <p class="text-muted">Kroků</p>
                            </div>
                        </div>
                        
                        @if (Model.LastRun.HasValue)
                        {
                            <hr>
                            <strong>Poslední běh:</strong><br>
                            @Model.LastRun.Value.ToString("dd.MM.yyyy HH:mm")<br>
                            @if (Model.LastRunSuccess)
                            {
                                <span class="badge badge-success">Úspěch</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Selhalo</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Execution History -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-history"></i> Historie spuštění
                        </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" onclick="refreshExecutions()">
                                <i class="fas fa-sync"></i> Obnovit
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (executions.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Spuštěno</th>
                                            <th>Režim</th>
                                            <th>Status</th>
                                            <th>Trvání</th>
                                            <th>Kroků</th>
                                            <th>Akce</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var execution in executions)
                                        {
                                            <tr>
                                                <td>@execution.StartedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>
                                                    @if (execution.Mode == "test")
                                                    {
                                                        <span class="badge badge-warning">Test</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-primary">Production</span>
                                                    }
                                                </td>
                                                <td>
                                                    @switch (execution.Status)
                                                    {
                                                        case "Running":
                                                            <span class="badge badge-info">Běží</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="badge badge-success">Dokončeno</span>
                                                            break;
                                                        case "Failed":
                                                            <span class="badge badge-danger">Selhalo</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="badge badge-secondary">Zrušeno</span>
                                                            break;
                                                        default:
                                                            <span class="badge badge-light">@execution.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @if (execution.CompletedAt.HasValue)
                                                    {
                                                        var duration = execution.CompletedAt.Value - execution.StartedAt;
                                                        @duration.TotalMinutes.ToString("F1") min
                                                    }
                                                    else if (execution.Status == "Running")
                                                    {
                                                        var duration = DateTime.UtcNow - execution.StartedAt;
                                                        @duration.TotalMinutes.ToString("F1") min
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>@execution.StepsCompleted/@execution.TotalSteps</td>
                                                <td>
                                                    @if (execution.Status == "Running")
                                                    {
                                                        <button type="button" class="btn btn-sm btn-warning" onclick="cancelExecution('@execution.Id')">
                                                            <i class="fas fa-stop"></i>
                                                        </button>
                                                    }
                                                    <button type="button" class="btn btn-sm btn-info" onclick="viewExecutionDetails('@execution.Id')">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-clock fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Žádné spuštění</h5>
                                <p class="text-muted">Tento projekt ještě nebyl spuštěn.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Project Files -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-file"></i> Soubory projektu
                        </h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" onclick="uploadFile()">
                                <i class="fas fa-upload"></i> Nahrát soubor
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (files.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Název</th>
                                            <th>Typ</th>
                                            <th>Velikost</th>
                                            <th>Nahráno</th>
                                            <th>Akce</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var file in files)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-file"></i> @file.OriginalFileName
                                                    @if (!string.IsNullOrEmpty(file.Description))
                                                    {
                                                        <br><small class="text-muted">@file.Description</small>
                                                    }
                                                </td>
                                                <td>@file.FileType</td>
                                                <td>@((file.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</td>
                                                <td>
                                                    @file.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                                    @if (!string.IsNullOrEmpty(file.UploadedBy))
                                                    {
                                                        <br><small class="text-muted">@file.UploadedBy</small>
                                                    }
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="downloadFile('@file.Id')">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-danger" onclick="deleteFile('@file.Id')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-file fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Žádné soubory</h5>
                                <p class="text-muted">K tomuto projektu nejsou připojené žádné soubory.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Run Workflow Modal -->
<div class="modal fade" id="runWorkflowModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-play"></i> Spustit workflow
                </h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Režim spuštění:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="runMode" id="testMode" value="test" checked>
                        <label class="form-check-label" for="testMode">
                            <i class="fas fa-vial"></i> Test režim
                            <small class="text-muted d-block">Bezpečné testování s omezeními</small>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="runMode" id="productionMode" value="production">
                        <label class="form-check-label" for="productionMode">
                            <i class="fas fa-rocket"></i> Produkční režim
                            <small class="text-muted d-block">Plné spuštění bez omezení</small>
                        </label>
                    </div>
                </div>
                
                <div id="testModeOptions" class="form-group">
                    <label for="testItemLimit">Limit položek pro test:</label>
                    <input type="number" id="testItemLimit" class="form-control" value="10" min="1" max="100">
                    <small class="form-text text-muted">Maximální počet položek k zpracování v test režimu</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Zrušit
                </button>
                <button type="button" class="btn btn-success" onclick="runWorkflow()">
                    <i class="fas fa-play"></i> Spustit
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function executeWorkflow() {
            $('#runWorkflowModal').modal('show');
        }
        
        function runWorkflow() {
            const mode = $('input[name="runMode"]:checked').val();
            const testItemLimit = mode === 'test' ? $('#testItemLimit').val() : null;
            
            const executionData = {
                projectId: '@Model.Id',
                mode: mode,
                testItemLimit: testItemLimit ? parseInt(testItemLimit) : null
            };
            
            $.ajax({
                url: '@Url.Action("ExecuteWorkflow", "Projects", new { id = Model.Id })',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(executionData),
                success: function(response) {
                    toastr.success('Workflow byl spuštěn');
                    $('#runWorkflowModal').modal('hide');
                    setTimeout(() => location.reload(), 1000);
                },
                error: function(xhr) {
                    const response = xhr.responseJSON || { message: 'Chyba při spouštění workflow' };
                    toastr.error(response.message);
                }
            });
        }
        
        function validateWorkflow() {
            $.ajax({
                url: '@Url.Action("ValidateWorkflow", "Projects", new { id = Model.Id })',
                type: 'POST',
                success: function(response) {
                    if (response.data.isValid) {
                        toastr.success('Workflow je validní');
                    } else {
                        toastr.error('Workflow obsahuje chyby: ' + response.data.errors.join(', '));
                    }
                },
                error: function(xhr) {
                    const response = xhr.responseJSON || { message: 'Chyba při validaci workflow' };
                    toastr.error(response.message);
                }
            });
        }
        
        function deleteProject() {
            if (confirm('Opravdu smazat tento projekt? Tato akce je nevratná.')) {
                $.ajax({
                    url: '@Url.Action("DeleteProject", "Projects")'.replace('Projects', 'api') + '/@Model.Id',
                    type: 'DELETE',
                    success: function(response) {
                        toastr.success('Projekt byl smazán');
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Index")';
                        }, 1000);
                    },
                    error: function(xhr) {
                        const response = xhr.responseJSON || { message: 'Chyba při mazání projektu' };
                        toastr.error(response.message);
                    }
                });
            }
        }
        
        function cancelExecution(executionId) {
            if (confirm('Opravdu zrušit běžící workflow?')) {
                // TODO: Implement cancel execution API
                toastr.info('Zrušení spuštění (implementace v produkci)');
            }
        }
        
        function viewExecutionDetails(executionId) {
            // TODO: Implement execution details view
            toastr.info('Detail spuštění (implementace v produkci)');
        }
        
        function refreshExecutions() {
            location.reload();
        }
        
        function uploadFile() {
            // TODO: Implement file upload
            toastr.info('Nahrání souboru (implementace v produkci)');
        }
        
        function downloadFile(fileId) {
            // TODO: Implement file download
            toastr.info('Stažení souboru (implementace v produkci)');
        }
        
        function deleteFile(fileId) {
            if (confirm('Opravdu smazat tento soubor?')) {
                // TODO: Implement file deletion
                toastr.info('Smazání souboru (implementace v produkci)');
            }
        }
        
        // Handle run mode change
        $(document).ready(function() {
            $('input[name="runMode"]').on('change', function() {
                if ($(this).val() === 'test') {
                    $('#testModeOptions').show();
                } else {
                    $('#testModeOptions').hide();
                }
            });
        });
    </script>
}