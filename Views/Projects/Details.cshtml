                                {
                                    <a href="@Url.Action("Details", "Customers", new { id = Model.CustomerId.Value })" class="text-primary">
                                        <i class="fas fa-user"></i> @Model.CustomerName
                                    </a>
                                }
                                else
                                {
                                    <span>
                                        <i class="fas fa-user text-muted"></i> @Model.CustomerName
                                    </span>
