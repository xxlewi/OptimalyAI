                const y1 = from.position().top + from.height() / 2;
                const x2 = to.position().left;
                const y2 = to.position().top + to.height() / 2;
                
                const path = `<path class="workflow-connection" d="M ${x1} ${y1} L ${x2} ${y2}"/>`;
