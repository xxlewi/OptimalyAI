@model OptimalyAI.ViewModels.WorkflowGraphViewModel

@if (ViewBag.ReadOnly != true)
{
    <div class="toolbox">
        <h5><i class="fas fa-toolbox"></i> Nástroje</h5>
        
        <h6>Vstup & Výstup</h6>
        <div class="tool-item" data-type="InputAdapter" draggable="true">
            <i class="fas fa-download"></i> Input Adaptér
            <small style="display: block; font-size: 10px; color: #666;">Data vstup</small>
        </div>
        <div class="tool-item" data-type="OutputAdapter" draggable="true">
            <i class="fas fa-upload"></i> Output Adaptér
            <small style="display: block; font-size: 10px; color: #666;">Data výstup</small>
        </div>
        
        <hr>
        
        <h6>Základní uzly</h6>
        <div class="tool-item" data-type="task" draggable="true">
            <i class="fas fa-square"></i> Proces
            <small style="display: block; font-size: 10px; color: #666;">Obdélník</small>
        </div>
        <div class="tool-item" data-type="condition" draggable="true">
            <i class="fas fa-question-circle"></i> Rozhodnutí
            <small style="display: block; font-size: 10px; color: #666;">Podmínka</small>
        </div>
        <div class="tool-item" data-type="parallel" draggable="true">
            <i class="fas fa-plus"></i> Paralelní brána
            <small style="display: block; font-size: 10px; color: #666;">AND Gateway</small>
        </div>
        
        <hr>
        
        <h6>AI Nástroje</h6>
        <div class="tool-item" data-type="tool" draggable="true">
            <i class="fas fa-robot"></i> AI Tool
            <small style="display: block; font-size: 10px; color: #666;">Nástroj</small>
        </div>
    </div>
}